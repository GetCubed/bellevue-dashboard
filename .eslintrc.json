{
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"next/core-web-vitals",
		"next/typescript",
		"plugin:tailwindcss/recommended"
	],
	"plugins": [
		"react",
		"tailwindcss"
	],
	"overrides": [
		{
			"files": ["*.json"],
			"parser": "jsonc-eslint-parser",
			"extends": ["plugin:jsonc/recommended-with-jsonc"],
			"rules": {
				"jsonc/no-comments": "off"
			}
		}
	],
	"rules": {
		// https://github.com/benmosher/eslint-plugin-import/blob/master/docs/rules/no-duplicates.md ğŸ”§
		"import/no-duplicates": "error",
		// // https://eslint.org/docs/latest/rules/object-curly-spacing ğŸ”§
		// "object-curly-spacing": [
		//   "error",
		//   "always"
		// ],
		// // https://github.com/jsx-eslint/eslint-plugin-react/blob/master/docs/rules/jsx-closing-bracket-location.md ğŸ”§
		// "react/jsx-closing-bracket-location": [
		//   "error",
		//   {
		//     "nonEmpty": "after-props",
		//     "selfClosing": "after-props"
		//   }
		// ],
		// https://eslint.org/docs/latest/rules/space-before-function-paren ğŸ”§
		"space-before-function-paren": [
			"error",
			"always"
		],
		"indent": [
			"error",
			"tab"
		],
		// // https://eslint.org/docs/latest/rules/key-spacing ğŸ”§
		// "key-spacing": [
		//   "error",
		//   {
		//     "beforeColon": false,
		//     "afterColon": true
		//   }
		// ],
		// https://eslint.org/docs/latest/rules/no-trailing-spaces ğŸ”§
		"no-trailing-spaces": "error",
		// https://typescript-eslint.io/rules/no-unused-vars/ âŒ
		"@typescript-eslint/no-unused-vars": [
			"warn",
			{
				"args": "all",
				"argsIgnorePattern": "^_",
				"caughtErrors": "all",
				"caughtErrorsIgnorePattern": "^_",
				"destructuredArrayIgnorePattern": "^_",
				"varsIgnorePattern": "^_",
				"ignoreRestSiblings": true
			}
		],
		// https://github.com/francoismassart/eslint-plugin-tailwindcss/blob/master/docs/rules/classnames-order.md ğŸ”§
		"tailwindcss/classnames-order": "error",
		// Disable the no-unreachable rule so unreachable code is not flagged by ESLint
		"no-unreachable": "off"
	}
}